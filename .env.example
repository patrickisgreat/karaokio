# Karaokio Configuration
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git - it's in .gitignore

# =============================================================================
# API KEYS (Optional but recommended for full functionality)
# =============================================================================

# Spotify API (for song search and metadata)
# Get from: https://developer.spotify.com/dashboard/
SPOTIFY_ACCESS_TOKEN=your_spotify_token_here

# Genius API (for lyrics)
# Get from: https://genius.com/api-clients
GENIUS_ACCESS_TOKEN=your_genius_token_here

# Musixmatch API (alternative lyrics source)
# Get from: https://developer.musixmatch.com/
MUSIXMATCH_API_KEY=your_musixmatch_key_here

# QuickLRC API (for AI lyrics synchronization)
# Get from: https://www.quicklrc.com/
QUICKLRC_API_KEY=your_quicklrc_key_here

# =============================================================================
# FILE STORAGE PATHS
# =============================================================================

# Directory for user uploads
UPLOAD_DIR=./uploads

# Directory for processed karaoke files
OUTPUT_DIR=./output

# Temporary processing files
TEMP_DIR=./temp

# Cache directory for preprocessed songs
CACHE_DIR=./cache

# Downloaded audio files (from torrents)
DOWNLOAD_DIR=./downloads

# Downloaded YouTube videos
YOUTUBE_VIDEO_DIR=./youtube_videos

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================

# Default processing quality: fast, balanced, high
DEFAULT_QUALITY=balanced

# Maximum upload file size in bytes (50MB default)
MAX_FILE_SIZE=52428800

# Maximum processing time in milliseconds (10 minutes)
MAX_PROCESSING_TIME=600000

# Enable/disable features
ENABLE_TORRENT_DOWNLOAD=true
ENABLE_YOUTUBE_DOWNLOAD=true
ENABLE_CACHE=true

# =============================================================================
# TORRENT SETTINGS
# =============================================================================

# Timeout for torrent downloads (5 minutes)
TORRENT_TIMEOUT=300000

# Minimum number of seeders required
MIN_SEEDERS=3

# Maximum concurrent torrent downloads
MAX_CONCURRENT_TORRENTS=3

# =============================================================================
# YOUTUBE SETTINGS
# =============================================================================

# Timeout for YouTube downloads (2 minutes)
YOUTUBE_TIMEOUT=120000

# Prefer official karaoke videos
PREFER_OFFICIAL_KARAOKE=true

# Maximum video quality (720p, 1080p, etc.)
MAX_VIDEO_QUALITY=1080p

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# How long to keep cached files (days)
CACHE_MAX_AGE_DAYS=30

# Maximum number of cached songs
CACHE_MAX_ENTRIES=100

# Maximum cache size in GB
CACHE_MAX_SIZE_GB=10

# =============================================================================
# SERVER SETTINGS
# =============================================================================

# Server port
PORT=3000

# Server host
HOST=localhost

# Enable CORS for cross-origin requests
ENABLE_CORS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
ENABLE_RATE_LIMIT=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'production' for production deployment
NODE_ENV=development

# Enable debug logging
DEBUG=karaokio:*